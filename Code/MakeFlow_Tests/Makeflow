DATA='/home/ubuntu/data'
NDATA="/home/ubuntu/new_data"
TOOL="/home/ubuntu/tools"

$NDATA/N9.bam:
    curl "https://s3-us-west-2.amazonaws.com/bd2k-test-data/testexome.pair9.normal.bam" > $NDATA/N9.bam

$NDATA/T9.bam:
    curl "https://s3-us-west-2.amazonaws.com/bd2k-test-data/testexome.pair9.normal.bam" > $NDATA/T9.bam

$NDATA/N9.bam.bai: $NDATA/N9.bam
    samtools index $NDATA/N9.bam

$NDATA/T9.bam.bai: $NDATA/T9.bam
   samtools index $NDATA/T9.bam

$NDATA/RTC.N.intervals: GenomeAnalysisTK.jar $NDATA/N9.bam.bai $NDATA/N9.bam $DATA/Homo_sapiens_assembly19.fasta $DATA/1000G_phase1.indels.hg19.sites.fixed.vcf $DATA/Mills_and_1000G_gold_standard.indels.hg19.sites.fixed.vcf
 java -Xmx15g -jar GenomeAnalysisTK.jar -T RealignerTargetCreator -nt 4 -R $DATA/Homo_sapiens_assembly19.fasta -I $NDATA/N9.bam -known ${DATA}/1000G_phase1.indels.hg19.sites.fixed.vcf -known ${DATA}/Mills_and_1000G_gold_standard.indels.hg19.sites.fixed.vcf --downsampling_type NONE -o $NDATA/RTC.N.intervals